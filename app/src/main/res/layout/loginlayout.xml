<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ticket"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:layout_marginTop="70dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muvie"
        android:textColor="#FA1433"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:layout_marginTop="110dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="60dp"
        android:text="Welcome Back,"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="225dp"
        android:layout_marginLeft="60dp"
        android:text="Login for Continue"
        android:textSize="14dp"/>

    <EditText
        android:id="@+id/isi_email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="270dp"
        android:background="#D8D8D8"
        android:layout_centerHorizontal="true"
        android:hint=" Email"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="55dp"
        />

    <EditText
        android:id="@+id/isi_password"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="330dp"
        android:background="#D8D8D8"
        android:hint=" Password"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="55dp" />

    <Button
        android:id="@+id/tombol_login"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:layout_weight="1"
        android:text="Login"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="55dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="475dp"
        android:text="Tidak ada Akun?"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="500dp" />

    <TextView
        android:id="@+id/jump_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginTop="475dp"
        android:textColor="#1BA4FF"
        android:textSize="15dp"
        android:textStyle="italic"
        android:text="Daftar Sekarang."
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="500dp" />

</RelativeLayout>