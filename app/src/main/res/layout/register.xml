<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:background="#90949C"
    tools:context=".register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ghostwhite"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Ticket"
            android:textSize="35dp"
            android:fontFamily="@font/aldrich"
            android:textColor="@color/dimgrey"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:gravity="center"
            android:text="Muvie"
            android:textColor="@color/orangered"
            android:textSize="35dp"
            android:textStyle="bold" />


    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ivory"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:layout_marginTop="40dp">
        <EditText
            android:id="@+id/txt_username"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:hint="Username"
            android:textColorHint="@color/dimgrey"
            android:backgroundTint="@color/dimgrey"
            android:inputType="textPersonName"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ivory"
        android:layout_marginBottom="15dp"
        android:gravity="center">
        <EditText
            android:id="@+id/txt_email"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:backgroundTint="@color/dimgrey"
            android:hint="Email"
            android:textColorHint="@color/dimgrey"
            android:inputType="textEmailAddress"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ivory"
        android:layout_marginBottom="15dp"
        android:gravity="center">
    <EditText
            android:id="@+id/txt_password"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:backgroundTint="@color/dimgrey"
            android:hint="Password"
            android:textColorHint="@color/dimgrey"
            android:password="true"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ivory"
        android:layout_marginBottom="15dp"
        android:gravity="center">
    <EditText
            android:id="@+id/txt_confirm_password"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:hint="Konfirmasi Password"
            android:password="true" />
    </LinearLayout>

        <Button
            android:id="@+id/registrasi"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="SIGN UP"
            android:textSize="18dp"
            android:background="@color/beer"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/jump_login"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:background="#00555555"
            android:text="Sudah punya akun? Login Disini"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>